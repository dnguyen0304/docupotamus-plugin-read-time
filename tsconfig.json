{
    "compilerOptions": {
        /* Emit */
        "target": "es2022",
        "module": "commonjs",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "jsx": "react",
        "rootDir": "src",
        "outDir": "lib",
        "declaration": true,
        "removeComments": true,
        "sourceMap": true,
        /* Type Checking */
        "allowUnreachableCode": false,
        /* Modules */
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        /* Plugins */
        "plugins": [
            {
                // TODO(dnguyen0304): Consider setting the classnameTransform
                // option so we can use standard CSS naming conventions instead
                // of camelCase.
                "name": "typescript-plugin-css-modules",
            },
        ],
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/lib/**/*",
        "**/__tests__/**",
    ]
}